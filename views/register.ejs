<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account - CINE-BOOK</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: #0a0a0a;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow-x: hidden;
      overflow-y: auto;
      position: relative;
      padding: 40px 20px;
    }

    /* Animated Background */
    .background-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      overflow: hidden;
    }

    .animated-text {
      position: absolute;
      font-size: 160px;
      font-weight: 900;
      color: rgba(229, 9, 20, 0.08);
      white-space: nowrap;
      animation: scrollText 30s linear infinite;
      letter-spacing: 40px;
      text-transform: uppercase;
      pointer-events: none;
      font-family: 'Inter', sans-serif;
      text-shadow: 0 0 40px rgba(229, 9, 20, 0.15);
    }

    .text-line-1 {
      top: 5%;
      animation-delay: 0s;
    }

    .text-line-2 {
      top: 25%;
      animation-delay: -8s;
    }

    .text-line-3 {
      top: 45%;
      animation-delay: -16s;
    }

    .text-line-4 {
      top: 65%;
      animation-delay: -12s;
    }

    .text-line-5 {
      top: 85%;
      animation-delay: -4s;
    }

    @keyframes scrollText {
      from {
        transform: translateX(-100%);
      }
      to {
        transform: translateX(100vw);
      }
    }

    /* Gradient Orbs */
    .orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(100px);
      opacity: 0.2;
      animation: floatOrb 20s infinite ease-in-out;
    }

    .orb1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, #e50914, #b20710);
      top: -200px;
      right: -200px;
      animation-delay: 0s;
    }

    .orb2 {
      width: 450px;
      height: 450px;
      background: radial-gradient(circle, #e50914, #8b0000);
      bottom: -200px;
      left: -200px;
      animation-delay: -10s;
    }

    .orb3 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, #ff1744, #e50914);
      top: 50%;
      left: 50%;
      animation-delay: -5s;
    }

    @keyframes floatOrb {
      0%, 100% {
        transform: translate(0, 0) scale(1);
      }
      25% {
        transform: translate(50px, -50px) scale(1.1);
      }
      50% {
        transform: translate(-30px, 30px) scale(0.9);
      }
      75% {
        transform: translate(20px, 40px) scale(1.05);
      }
    }

    /* Container */
    .container {
      width: 100%;
      max-width: 520px;
      z-index: 10;
      position: relative;
    }

    .register-card {
      background: rgba(10, 10, 10, 0.75);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(229, 9, 20, 0.15);
      border-radius: 24px;
      padding: 44px 40px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8), 0 0 80px rgba(229, 9, 20, 0.1);
      animation: slideUp 0.6s ease-out;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Logo */
    .logo-section {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 32px;
      animation: logoGlow 3s ease-in-out infinite;
    }

    @keyframes logoGlow {
      0%, 100% {
        filter: drop-shadow(0 0 10px rgba(229, 9, 20, 0.3));
      }
      50% {
        filter: drop-shadow(0 0 20px rgba(229, 9, 20, 0.6));
      }
    }

    .logo-icon {
      width: 52px;
      height: 52px;
      background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 14px;
      font-size: 26px;
      font-weight: 900;
      color: white;
      box-shadow: 0 10px 30px rgba(229, 9, 20, 0.5);
      letter-spacing: -1px;
    }

    .logo-text {
      font-size: 32px;
      font-weight: 900;
      background: linear-gradient(135deg, #fff 0%, #e50914 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -1px;
    }

    /* Header */
    h1 {
      font-size: 30px;
      color: #fff;
      margin-bottom: 8px;
      text-align: center;
      font-weight: 700;
      letter-spacing: -0.5px;
    }

    .subtitle {
      text-align: center;
      color: rgba(255, 255, 255, 0.5);
      font-size: 15px;
      margin-bottom: 28px;
      font-weight: 400;
    }

    /* Messages */
    .error-message {
      color: #ff4444;
      margin-bottom: 20px;
      text-align: center;
      padding: 12px 16px;
      background: rgba(255, 68, 68, 0.1);
      border: 1px solid rgba(255, 68, 68, 0.2);
      border-radius: 10px;
      font-size: 14px;
      font-weight: 500;
    }

    /* Form */
    .form-group {
      margin-bottom: 20px;
      position: relative;
    }

    label {
      display: block;
      margin-bottom: 10px;
      color: rgba(255, 255, 255, 0.7);
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .input-wrapper {
      position: relative;
    }

    .input-icon {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.4);
      font-size: 18px;
      pointer-events: none;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 14px 16px 14px 48px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      color: #fff;
      font-size: 15px;
      transition: all 0.3s ease;
      outline: none;
      font-family: 'Inter', sans-serif;
    }

    input::placeholder {
      color: rgba(255, 255, 255, 0.3);
    }

    input:focus {
      background: rgba(255, 255, 255, 0.08);
      border-color: #e50914;
      box-shadow: 0 0 0 4px rgba(229, 9, 20, 0.2);
    }

    input.valid {
      border-color: #22c55e;
    }

    input.invalid {
      border-color: #ff4444;
    }

    /* Password Toggle */
    .password-toggle {
      position: relative;
    }

    .toggle-btn {
      position: absolute;
      right: 16px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: rgba(255, 255, 255, 0.4);
      cursor: pointer;
      font-size: 20px;
      transition: color 0.2s;
      padding: 0;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .toggle-btn:hover {
      color: rgba(255, 255, 255, 0.7);
    }

    /* Password Strength */
    .password-strength {
      height: 4px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 2px;
      margin-top: 8px;
      overflow: hidden;
      display: none;
    }

    .password-strength-bar {
      height: 100%;
      width: 0%;
      border-radius: 2px;
      transition: all 0.3s ease;
      background: #ff4444;
    }

    /* Terms */
    .terms {
      display: none;
    }

    input[type="checkbox"] {
      width: 18px;
      height: 18px;
      margin-top: 2px;
      cursor: pointer;
      accent-color: #e50914;
      flex-shrink: 0;
    }

    .terms label {
      color: rgba(255, 255, 255, 0.6);
      font-weight: 400;
      margin-bottom: 0;
      text-transform: none;
      letter-spacing: 0;
      font-size: 13px;
      line-height: 1.5;
    }

    .terms a {
      color: #e50914;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.2s;
    }

    .terms a:hover {
      color: #f40612;
      text-decoration: underline;
    }

    /* Button */
    .btn-register {
      width: 100%;
      padding: 16px;
      background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
      position: relative;
      overflow: hidden;
      font-family: 'Inter', sans-serif;
      margin-top: 8px;
    }

    .btn-register::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    .btn-register:hover::before {
      left: 100%;
    }

    .btn-register:hover {
      box-shadow: 0 12px 40px rgba(229, 9, 20, 0.6);
      transform: translateY(-2px);
    }

    .btn-register:active {
      transform: translateY(1px);
    }

    .btn-register:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    /* Login Link */
    .login-link {
      text-align: center;
      margin-top: 24px;
      color: rgba(255, 255, 255, 0.5);
      font-size: 14px;
      font-weight: 400;
    }

    .login-link a {
      color: #e50914;
      text-decoration: none;
      font-weight: 700;
      transition: color 0.2s;
    }

    .login-link a:hover {
      color: #f40612;
      text-decoration: underline;
    }

    /* Back to Home */
    .back-home {
      position: absolute;
      top: 32px;
      left: 32px;
      z-index: 100;
    }

    .back-home a {
      display: flex;
      align-items: center;
      gap: 8px;
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s;
      padding: 10px 18px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      backdrop-filter: blur(10px);
    }

    .back-home a:hover {
      color: #fff;
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(229, 9, 20, 0.5);
    }

    /* Responsive */
    @media (max-width: 480px) {
      .register-card {
        padding: 32px 24px;
      }

      h1 {
        font-size: 26px;
      }

      .logo-icon {
        width: 42px;
        height: 42px;
        font-size: 20px;
      }

      .logo-text {
        font-size: 24px;
      }

      .animated-text {
        font-size: 100px;
        letter-spacing: 20px;
      }

      .back-home {
        top: 20px;
        left: 20px;
      }

      input[type="text"],
      input[type="email"],
      input[type="password"] {
        padding: 12px 14px 12px 44px;
      }
    }
  </style>
</head>
<body>
  <div class="background-container">
    <div class="orb orb1"></div>
    <div class="orb orb2"></div>
    <div class="orb orb3"></div>
    <div class="animated-text text-line-1">CINE-BOOK</div>
    <div class="animated-text text-line-2">CINE-BOOK</div>
    <div class="animated-text text-line-3">CINE-BOOK</div>
    <div class="animated-text text-line-4">CINE-BOOK</div>
    <div class="animated-text text-line-5">CINE-BOOK</div>
  </div>

  <div class="back-home">
    <a href="/">
      <span>←</span>
      <span>Back to Home</span>
    </a>
  </div>

  <div class="container">
    <div class="register-card">
      <div class="logo-section">
        <div class="logo-icon">CB</div>
        <div class="logo-text">CINE-BOOK</div>
      </div>

      <h1>Create Account</h1>
      <p class="subtitle">Join us for the ultimate movie experience</p>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
          <%= error %>
        </div>
      <% } %>

      <form id="registerForm" action="/auth/register" method="POST">
        <div class="form-group">
          <label for="name">Full Name</label>
          <div class="input-wrapper">
            <span class="input-icon">⚬</span>
            <input type="text" id="name" name="name" placeholder="Enter your full name" required>
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <div class="input-wrapper">
            <span class="input-icon">✉</span>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
          </div>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-wrapper password-toggle">
            <span class="input-icon">⚿</span>
            <input type="password" id="password" name="password" placeholder="Create a password" required minlength="6">
            <button type="button" class="toggle-btn" id="togglePassword">⊙</button>
          </div>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <div class="input-wrapper password-toggle">
            <span class="input-icon">⚿</span>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
            <button type="button" class="toggle-btn" id="toggleConfirmPassword">⊙</button>
          </div>
        </div>

        <div class="terms">
          <input type="checkbox" id="terms" name="terms" required>
          <label for="terms">I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
        </div>

        <button type="submit" class="btn-register" id="submitBtn">
          Create Account
        </button>
      </form>

      <p class="login-link">Already have an account? <a href="/login">Sign In</a></p>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('confirmPassword');
      const togglePassword = document.getElementById('togglePassword');
      const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
      
      // Password toggle functionality
      togglePassword.addEventListener('click', function() {
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;
        this.textContent = type === 'password' ? '⊙' : '⊗';
      });

      toggleConfirmPassword.addEventListener('click', function() {
        const type = confirmPasswordInput.type === 'password' ? 'text' : 'password';
        confirmPasswordInput.type = type;
        this.textContent = type === 'password' ? '⊙' : '⊗';
      });
      
      // Password match validation
      confirmPasswordInput.addEventListener('input', checkPasswordMatch);
      passwordInput.addEventListener('input', checkPasswordMatch);
      
      function checkPasswordMatch() {
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;
        
        if (confirmPassword.length > 0) {
          if (password === confirmPassword) {
            confirmPasswordInput.classList.add('valid');
            confirmPasswordInput.classList.remove('invalid');
          } else {
            confirmPasswordInput.classList.add('invalid');
            confirmPasswordInput.classList.remove('valid');
          }
        } else {
          confirmPasswordInput.classList.remove('valid', 'invalid');
        }
      }
      
      // Form submission validation
      document.getElementById('registerForm').addEventListener('submit', function(e) {
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        
        if (password !== confirmPassword) {
          e.preventDefault();
          alert('Passwords do not match');
          return;
        }
      });

      // Input focus effects
      const inputs = document.querySelectorAll('input[type="text"], input[type="email"], input[type="password"]');
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement.parentElement.style.transition = 'transform 0.3s ease';
          this.parentElement.parentElement.style.transform = 'scale(1.01)';
        });

        input.addEventListener('blur', function() {
          this.parentElement.parentElement.style.transform = 'scale(1)';
        });
      });
    });
  </script>
</body>
</html>