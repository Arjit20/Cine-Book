<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Seats - <%= movie.title %></title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap">
  <script src="/socket.io/socket.io.js" defer></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: #0a0a0a;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      color: #e5e5e5;
      line-height: 1.6;
      min-height: 100vh;
    }

    /* ===== Navbar ===== */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: rgba(10, 10, 10, 0.95);
      backdrop-filter: blur(20px);
      padding: 0 40px;
      z-index: 100;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 72px;
    }
    
    .navbar-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }
    
    .logo-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-weight: 800;
      font-size: 18px;
      letter-spacing: -1px;
    }
    
    .navbar-title {
      font-size: 1.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #fff 0%, #e5e5e5 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.5px;
    }

    .navbar-btn {
      background: transparent;
      color: #e5e5e5;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 6px;
      padding: 10px 24px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
      font-family: 'Inter', sans-serif;
    }
    
    .navbar-btn:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.3);
    }

    /* ===== Main Content ===== */
    .main-content {
      max-width: 1400px;
      margin: 92px auto 40px auto;
      padding: 0 20px;
    }

    /* ===== Movie Header ===== */
    .movie-header {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 16px;
      padding: 32px;
      margin-bottom: 32px;
      text-align: center;
    }

    .movie-header h1 {
      font-size: 2.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #fff 0%, #e5e5e5 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 12px;
      letter-spacing: -1px;
    }

    .movie-details {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1.1rem;
      margin-bottom: 8px;
    }

    .show-info {
      color: #22c55e;
      font-size: 1rem;
      font-weight: 600;
    }

    /* ===== Screen ===== */
    .screen-container {
      text-align: center;
      margin: 40px 0 32px;
      perspective: 1200px;
    }

    .screen {
      width: min(82%, 920px);
      height: 24px;
      margin: 0 auto;
      background: linear-gradient(90deg, #e5e5e5, #fff, #e5e5e5);
      border-radius: 50% / 100% 100% 0 0;
      box-shadow: 0 10px 40px rgba(229, 9, 20, 0.3), inset 0 -6px 10px rgba(0,0,0,0.2);
      position: relative;
    }

    .screen::after {
      content: 'SCREEN';
      position: absolute;
      top: -30px;
      left: 50%;
      transform: translateX(-50%);
      color: rgba(255, 255, 255, 0.4);
      font-size: 0.8rem;
      font-weight: 700;
      letter-spacing: 3px;
    }

    /* ===== Seating Area ===== */
    .seating-container {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 16px;
      padding: 40px 20px;
      margin-bottom: 32px;
    }

    .seating {
      width: min(820px, 100%);
      margin: 0 auto;
      display: grid;
      gap: 12px;
    }

    .row {
      display: grid;
      grid-template-columns: auto repeat(5, 1fr) 18px repeat(5, 1fr) auto;
      align-items: center;
      gap: 12px;
      position: relative;
    }

    .row-label {
      width: 32px;
      text-align: center;
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.9rem;
      font-weight: 700;
    }

    .seat {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .sr-only {
      position: absolute !important;
      height: 1px;
      width: 1px;
      overflow: hidden;
      clip: rect(1px, 1px, 1px, 1px);
      white-space: nowrap;
    }

    .seat label {
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 36px;
      border-radius: 8px 8px 12px 12px;
      border: 2px solid rgba(34, 197, 94, 0.5);
      transition: all 0.2s ease;
      background: rgba(34, 197, 94, 0.1);
      position: relative;
      font-size: 11px;
      font-weight: 700;
      color: #22c55e;
    }

    .seat label::before {
      content: "";
      position: absolute;
      top: -4px;
      width: 70%;
      height: 4px;
      border-radius: 4px;
      background: currentColor;
      opacity: 0.2;
    }

    .seat label:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 16px rgba(34, 197, 94, 0.3);
      background: rgba(34, 197, 94, 0.2);
      border-color: #22c55e;
    }

    .seat input:checked + label {
      background: linear-gradient(135deg, #22c1ff, #1ea4ff);
      border-color: #1ea4ff;
      box-shadow: 0 12px 24px rgba(30, 164, 255, 0.4);
      color: #fff;
      transform: translateY(-4px);
    }

    .seat input[disabled] + label {
      cursor: not-allowed;
      border-color: rgba(239, 68, 68, 0.5);
      background: rgba(239, 68, 68, 0.1);
      color: #ef4444;
      opacity: 0.6;
    }

    .seat input[disabled] + label:hover {
      transform: none;
      box-shadow: none;
    }

    .row.vip .seat label {
      border-color: rgba(255, 179, 71, 0.5);
      background: rgba(255, 179, 71, 0.1);
      color: #ffb347;
    }

    .row.vip .seat input:checked + label {
      background: linear-gradient(135deg, #ffd04d, #ff9f3d);
      color: #2b1d00;
      box-shadow: 0 12px 24px rgba(255, 159, 61, 0.4);
    }

    .aisle {
      width: 18px;
      height: 100%;
    }

    /* ===== Legend ===== */
    .legend {
      display: flex;
      justify-content: center;
      gap: 24px;
      margin: 24px 0;
      flex-wrap: wrap;
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 10px;
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
      font-weight: 500;
    }

    .legend-seat {
      width: 24px;
      height: 24px;
      border-radius: 6px;
      display: inline-block;
    }

    .legend-seat.available {
      background: rgba(34, 197, 94, 0.3);
      border: 2px solid #22c55e;
    }

    .legend-seat.selected {
      background: linear-gradient(135deg, #22c1ff, #1ea4ff);
    }

    .legend-seat.booked {
      background: rgba(239, 68, 68, 0.3);
      border: 2px solid #ef4444;
    }

    .legend-seat.vip {
      background: rgba(255, 179, 71, 0.3);
      border: 2px solid #ffb347;
    }

    /* ===== Booking Summary ===== */
    .booking-summary {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 16px;
      padding: 32px;
      margin-bottom: 32px;
    }

    .summary-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 24px;
    }

    .summary-item {
      text-align: center;
      padding: 16px;
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
    }

    .summary-label {
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.85rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 8px;
    }

    .summary-value {
      font-size: 2rem;
      font-weight: 800;
      color: #fff;
    }

    .email-input-section {
      margin: 24px 0;
    }

    .email-input-section label {
      display: block;
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .email-input-section input {
      width: 100%;
      padding: 14px 16px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      color: #fff;
      font-size: 1rem;
      transition: all 0.3s ease;
      outline: none;
      font-family: 'Inter', sans-serif;
    }

    .email-input-section input::placeholder {
      color: rgba(255, 255, 255, 0.3);
    }

    .email-input-section input:focus {
      background: rgba(255, 255, 255, 0.08);
      border-color: #e50914;
      box-shadow: 0 0 0 4px rgba(229, 9, 20, 0.2);
    }

    .action-buttons {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
    }

    .btn {
      flex: 1;
      min-width: 150px;
      padding: 16px 24px;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-family: 'Inter', sans-serif;
    }

    .btn-primary {
      background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
      color: #fff;
    }

    .btn-primary:hover:not(:disabled) {
      box-shadow: 0 12px 40px rgba(229, 9, 20, 0.6);
      transform: translateY(-2px);
    }

    .btn-primary:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none;
    }

    .btn-secondary {
      background: rgba(255, 255, 255, 0.05);
      color: #e5e5e5;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.08);
      transform: translateY(-2px);
    }

    .btn-toggle {
      background: linear-gradient(135deg, #8b5cf6, #7c3aed);
      color: #fff;
    }

    .btn-toggle:hover {
      box-shadow: 0 12px 40px rgba(139, 92, 246, 0.4);
      transform: translateY(-2px);
    }

    /* ===== Cancel Booking Section ===== */
    .cancel-booking-section {
      background: rgba(239, 68, 68, 0.05);
      border: 1px solid rgba(239, 68, 68, 0.2);
      border-radius: 16px;
      padding: 24px;
      margin-top: 24px;
    }

    .cancel-booking-section h3 {
      color: #ef4444;
      font-size: 1.1rem;
      margin-bottom: 16px;
      font-weight: 700;
    }

    .cancel-input-group {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .cancel-input-group input {
      flex: 1;
      min-width: 250px;
      padding: 14px 16px;
      background: rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(239, 68, 68, 0.3);
      border-radius: 10px;
      color: #fff;
      font-size: 0.95rem;
      outline: none;
      font-family: 'Inter', sans-serif;
    }

    .cancel-input-group input::placeholder {
      color: rgba(255, 255, 255, 0.3);
    }

    .cancel-input-group input:focus {
      border-color: #ef4444;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
    }

    .btn-cancel {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      color: #fff;
      padding: 14px 28px;
      border: none;
      border-radius: 10px;
      font-size: 0.95rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-cancel:hover {
      box-shadow: 0 8px 24px rgba(239, 68, 68, 0.4);
      transform: translateY(-2px);
    }

    /* ===== 3D Mode ===== */
    body.view-3d .screen {
      transform: rotateX(25deg) translateZ(20px);
      box-shadow: 0 20px 70px rgba(229, 9, 20, 0.5);
    }

    body.view-3d .seating {
      transform: rotateX(35deg) translateY(-8px);
      filter: drop-shadow(0 30px 40px rgba(0, 0, 0, 0.5));
    }

    body.view-3d .row:nth-child(1) { transform: translateZ(80px); }
    body.view-3d .row:nth-child(2) { transform: translateZ(64px); }
    body.view-3d .row:nth-child(3) { transform: translateZ(48px); }
    body.view-3d .row:nth-child(4) { transform: translateZ(32px); }
    body.view-3d .row:nth-child(5) { transform: translateZ(16px); }
    body.view-3d .row:nth-child(6) { transform: translateZ(0); }
    body.view-3d .row:nth-child(7) { transform: translateZ(-12px); }
    body.view-3d .row:nth-child(8) { transform: translateZ(-24px); }

    /* ===== Responsive ===== */
    @media (max-width: 768px) {
      .navbar {
        padding: 0 20px;
      }

      .main-content {
        padding: 0 16px;
      }

      .movie-header h1 {
        font-size: 2rem;
      }

      .row {
        gap: 8px;
      }

      .seat label {
        width: 36px;
        height: 32px;
        font-size: 10px;
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }

      .cancel-input-group {
        flex-direction: column;
      }

      .cancel-input-group input {
        width: 100%;
      }
    }

    @media (max-width: 480px) {
      .navbar {
        height: 64px;
      }

      .movie-header {
        padding: 24px 16px;
      }

      .movie-header h1 {
        font-size: 1.75rem;
      }

      .summary-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <!-- ===== Navbar ===== -->
  <nav class="navbar">
    <a href="/" class="navbar-logo">
      <div class="logo-icon">CB</div>
      <div class="navbar-title">CINE-BOOK</div>
    </a>
    <a href="/movies" class="navbar-btn">‚Üê Back to Movies</a>
  </nav>

  <!-- ===== Main Content ===== -->
  <main class="main-content">
    <!-- Movie Header -->
    <div class="movie-header">
      <h1><%= movie.title %></h1>
      <p class="movie-details">
        <%= movie.genre %> | <%= movie.language %> | <%= movie.duration %> mins
      </p>
      <% if (show && show.theater && show.startTime) { %>
        <p class="show-info">
          <%= show.theater %> | <%= show.startTime.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %> at <%= show.startTime.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
        </p>
      <% } else if (show) { %>
        <p class="show-info">
          <%= show.theater || "PVR Cinemas" %> | <%= show.timing || show.showTime || "10:00 AM" %>
        </p>
      <% } %>
    </div>

    <!-- Screen -->
    <div class="screen-container">
      <div class="screen"></div>
    </div>

    <!-- Seating Area -->
    <div class="seating-container">
      <div class="seating" id="seatingGrid" role="group" aria-label="Seat rows A to H"></div>
    </div>

    <!-- Legend -->
    <div class="legend">
      <div class="legend-item">
        <span class="legend-seat available"></span>
        Available
      </div>
      <div class="legend-item">
        <span class="legend-seat selected"></span>
        Selected
      </div>
      <div class="legend-item">
        <span class="legend-seat booked"></span>
        Booked
      </div>
      <div class="legend-item">
        <span class="legend-seat vip"></span>
        VIP
      </div>
    </div>

    <!-- Booking Summary -->
    <div class="booking-summary">
      <div class="summary-grid">
        <div class="summary-item">
          <div class="summary-label">Selected Seats</div>
          <div class="summary-value" id="selectedSeats">0</div>
        </div>
        <div class="summary-item">
          <div class="summary-label">Total Cost</div>
          <div class="summary-value">‚Çπ<span id="totalCost">0</span></div>
        </div>
      </div>

      <div class="email-input-section">
        <label for="emailInput">Email for Confirmation</label>
        <input 
          type="email" 
          id="emailInput" 
          placeholder="Enter your email address"
          value="">
      </div>

      <div class="action-buttons">
        <button id="resetBtn" class="btn btn-secondary">Reset Selection</button>
        <button id="toggle3DBtn" class="btn btn-toggle">Toggle 3D View</button>
        <button id="confirmBtn" class="btn btn-primary" disabled>Book Now</button>
      </div>

      <!-- Cancel Booking Section -->
      <div class="cancel-booking-section">
        <h3>Cancel Existing Booking</h3>
        <div class="cancel-input-group">
          <input 
            id="cancelTicketId" 
            type="text" 
            placeholder="Enter Ticket ID to cancel">
          <button id="cancelBookingBtn" class="btn-cancel">Cancel Booking</button>
        </div>
      </div>
    </div>
  </main>

  <script>
    const seatingGrid = document.getElementById('seatingGrid');
    const selectedSeatsElement = document.getElementById('selectedSeats');
    const totalCostElement = document.getElementById('totalCost');
    const resetBtn = document.getElementById('resetBtn');
    const confirmBtn = document.getElementById('confirmBtn');
    const toggle3DBtn = document.getElementById('toggle3DBtn');

    const baseSeatPrice = <%- JSON.stringify(show && show.price ? show.price : 250) %>;

    let selectedSeats = [];
    let bookedSeats = [];

    async function initializeSeats() {
      try {
        const showId = '<%= show && show._id ? show._id : "" %>';
        if (showId) {
          const response = await fetch(`/seats/booked-seats/${showId}?t=${Date.now()}`, { 
            cache: 'no-store', 
            headers: { 'Cache-Control': 'no-cache', 'Pragma': 'no-cache' } 
          });
          const result = await response.json();
          if (result.bookedSeats) {
            bookedSeats = result.bookedSeats;
          }
        }
        generateSeats();
      } catch (error) {
        console.error('Error loading seats:', error);
        generateSeats();
      }
    }

    function generateSeats() {
      seatingGrid.innerHTML = '';
      const rows = ['A', 'B', 'C', 'D', 'E', 'F', 'G', 'H'];
      
      for (let r = 0; r < rows.length; r++) {
        const rowEl = document.createElement('div');
        rowEl.className = 'row' + (r >= 6 ? ' vip' : '');
        rowEl.setAttribute('aria-label', `Row ${rows[r]}`);

        const leftLabel = document.createElement('div');
        leftLabel.className = 'row-label';
        leftLabel.textContent = rows[r];
        leftLabel.setAttribute('aria-hidden', 'true');
        rowEl.appendChild(leftLabel);

        for (let c = 1; c <= 10; c++) {
          if (c === 6) {
            const aisle = document.createElement('div');
            aisle.className = 'aisle';
            rowEl.appendChild(aisle);
          }
          
          const seatId = `${rows[r]}${c}`;
          const seatDiv = document.createElement('div');
          seatDiv.className = 'seat' + (r >= 6 ? ' vip' : '');

          const input = document.createElement('input');
          input.type = 'checkbox';
          input.className = 'sr-only';
          input.id = seatId;
          input.dataset.seatNumber = seatId;
          if (bookedSeats.includes(seatId)) input.disabled = true;

          const label = document.createElement('label');
          label.setAttribute('for', seatId);
          label.setAttribute('aria-label', `Row ${rows[r]} seat ${c}${r >= 6 ? ' VIP' : ''}`);
          label.textContent = seatId;

          input.addEventListener('change', () => {
            const idx = selectedSeats.indexOf(seatId);
            if (input.checked) {
              if (idx === -1) selectedSeats.push(seatId);
            } else if (idx > -1) {
              selectedSeats.splice(idx, 1);
            }
            updateSummary();
          });

          seatDiv.appendChild(input);
          seatDiv.appendChild(label);
          rowEl.appendChild(seatDiv);
        }

        const rightLabel = document.createElement('div');
        rightLabel.className = 'row-label';
        rightLabel.textContent = rows[r];
        rightLabel.setAttribute('aria-hidden', 'true');
        rowEl.appendChild(rightLabel);

        seatingGrid.appendChild(rowEl);
      }
    }

    function updateSummary() {
      selectedSeatsElement.textContent = selectedSeats.length;
      const totalCost = selectedSeats.length * baseSeatPrice;
      totalCostElement.textContent = totalCost;
      confirmBtn.disabled = selectedSeats.length === 0;
    }

    async function hardResetSelection() {
      try {
        const allInputs = seatingGrid.querySelectorAll('input[type="checkbox"]');
        allInputs.forEach(input => { if (!input.disabled) input.checked = false; });
        
        selectedSeats = [];
        updateSummary();
        
        const showId = '<%= show && show._id ? show._id : "" %>';
        if (showId) {
          const res = await fetch(`/seats/booked-seats/${showId}?t=${Date.now()}`, { 
            cache: 'no-store', 
            headers: { 'Cache-Control': 'no-cache', 'Pragma': 'no-cache' } 
          });
          const data = await res.json();
          bookedSeats = Array.isArray(data.bookedSeats) ? data.bookedSeats : [];
        }
        
        seatingGrid.innerHTML = '';
        generateSeats();
      } catch (e) {
        console.error('Reset reload failed:', e);
        selectedSeats = [];
        seatingGrid.innerHTML = '';
        generateSeats();
      } finally {
        confirmBtn.disabled = true;
        confirmBtn.textContent = 'Book Now';
        selectedSeatsElement.textContent = '0';
        totalCostElement.textContent = '0';
        const emailInput = document.getElementById('emailInput');
        if (emailInput) emailInput.value = '';
      }
    }

    resetBtn.addEventListener('click', hardResetSelection);

    toggle3DBtn.addEventListener('click', () => {
      document.body.classList.toggle('view-3d');
      toggle3DBtn.textContent = document.body.classList.contains('view-3d') 
        ? 'Disable 3D View' 
        : 'Toggle 3D View';
    });

    confirmBtn.addEventListener('click', async () => {
      if (selectedSeats.length > 0) {
        try {
          const showId = '<%= show && show._id ? show._id : "" %>';
          const emailInput = document.getElementById('emailInput');
          let userEmail = emailInput.value.trim();
          
          if (!showId) {
            alert('‚ùå Error: Show information not found');
            return;
          }

          if (!userEmail) {
            alert('üìß Please enter your email to receive booking confirmation');
            emailInput.focus();
            return;
          }

          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(userEmail)) {
            alert('Please enter a valid email address');
            emailInput.focus();
            return;
          }

          confirmBtn.disabled = true;
          confirmBtn.textContent = 'Booking...';

          const response = await fetch('/seats/book', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              showId: showId,
              seats: selectedSeats,
              userEmail: userEmail
            })
          });

          const result = await response.json();
          
          if (result.success) {
            const emailStatusText = result.emailStatus || 'üìß Processing confirmation email...';
            alert(`‚úÖ Booking Successful!\nüé´ Ticket ID: ${result.ticketId}\nüí∞ Total: ‚Çπ${result.totalAmount}\n${emailStatusText}\n\nRedirecting to My Bookings...`);
            
            localStorage.setItem('lastUsedEmail', userEmail);
            
            // Redirect to my bookings page after 2 seconds
            setTimeout(() => {
              window.location.href = '/my-bookings';
            }, 2000);
          } else {
            alert('‚ùå Booking failed: ' + result.error);
            confirmBtn.disabled = false;
            confirmBtn.textContent = 'Book Now';
          }
        } catch (error) {
          console.error('Booking error:', error);
          alert('‚ùå Network error! Please check your connection and try again.');
          confirmBtn.disabled = false;
          confirmBtn.textContent = 'Book Now';
        }
      }
    });

    // Restore last used email
    window.addEventListener('DOMContentLoaded', () => {
      const emailInput = document.getElementById('emailInput');
      const lastUsedEmail = localStorage.getItem('lastUsedEmail');
      if (lastUsedEmail) {
        emailInput.value = lastUsedEmail;
      }
    });

    // Cancel booking handler
    document.getElementById('cancelBookingBtn').addEventListener('click', async () => {
      const ticketId = document.getElementById('cancelTicketId').value.trim();
      if (!ticketId) {
        alert('Please enter a Ticket ID to cancel.');
        return;
      }
      
      if (!confirm(`Are you sure you want to cancel booking ${ticketId}?`)) {
        return;
      }
      
      try {
        const resp = await fetch('/seats/cancel-booking', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ ticketId })
        });
        const data = await resp.json();
        if (data.success) {
          alert('‚úÖ ' + data.message);
          document.getElementById('cancelTicketId').value = '';
          await hardResetSelection();
        } else {
          alert('‚ùå ' + (data.error || 'Failed to cancel booking'));
        }
      } catch (e) {
        console.error('Cancel booking error:', e);
        alert('‚ùå Network error while cancelling booking');
      }
    });

    // Initialize
    initializeSeats();
  </script>
