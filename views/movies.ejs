<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CINE-BOOK | Movies Dashboard</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap">
  <style>
    /* ===== Global Styles ===== */
    body {
      background: #18181c;
      font-family: 'Poppins', sans-serif;
      margin: 0;
      padding: 0;
      color: #fff;
    }

    /* ===== Navbar ===== */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: #101010;
      padding: 0 40px;
      z-index: 100;
      border-bottom: 2px solid #00bcd4;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 70px;
      box-sizing: border-box;
    }
    .navbar-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: #00bcd4;
      letter-spacing: 1.5px;
      white-space: nowrap;
    }
    .navbar-actions {
      display: flex;
      align-items: center;
      gap: 16px;
      flex-shrink: 0;
    }
    .navbar-user {
      color: #fff;
      font-size: 0.95rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .navbar-user-icon {
      width: 32px;
      height: 32px;
      background: linear-gradient(135deg, #00bcd4, #0097a7);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      font-weight: 600;
    }
    .navbar-btn {
      background: #00bcd4;
      color: #fff;
      border: none;
      border-radius: 4px;
      padding: 8px 18px;
      font-size: 0.95rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.2s;
      text-decoration: none;
      white-space: nowrap;
    }
    .navbar-btn:hover {
      background: #0097a7;
    }

    /* ===== Welcome Banner ===== */
    .welcome-banner {
      background: linear-gradient(135deg, rgba(0, 188, 212, 0.15) 0%, rgba(0, 151, 167, 0.15) 100%);
      border: 1px solid rgba(0, 188, 212, 0.3);
      border-radius: 12px;
      padding: 24px 30px;
      margin-bottom: 30px;
      text-align: center;
      animation: slideDown 0.5s ease-out;
    }
    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .welcome-banner h2 {
      font-size: 1.8rem;
      font-weight: 600;
      margin: 0 0 8px 0;
      color: #00bcd4;
    }
    .welcome-banner p {
      font-size: 1rem;
      color: #aaa;
      margin: 0;
    }

    /* ===== Main Content ===== */
    .main-content {
      max-width: 1300px;
      margin: 100px auto 40px auto;
      padding: 0 20px;
    }

    /* ===== Carousel ===== */
    .carousel-container {
      width: 100%;
      margin-bottom: 60px;
      position: relative;
      overflow: hidden;
      border-radius: 12px;
    }
    .carousel {
      display: flex;
      transition: transform 0.6s ease;
      width: 100%;
    }
    .carousel-slide {
      min-width: 100%;
      height: 380px;
      position: relative;
    }
    .carousel-slide img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 12px;
    }
    .carousel-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0,0,0,0.6);
      border: none;
      color: #fff;
      font-size: 2rem;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      cursor: pointer;
      z-index: 10;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background 0.2s;
    }
    .carousel-nav:hover {
      background: rgba(0,188,212,0.8);
    }
    .carousel-nav.left { left: 15px; }
    .carousel-nav.right { right: 15px; }

    /* ===== Section Header ===== */
    .dashboard-header {
      margin: 20px 0 30px 0;
      width: 100%;
    }
    .dashboard-header h1 {
      font-size: 1.8rem;
      font-weight: 600;
      margin-bottom: 6px;
      color: #fff;
    }
    .dashboard-header p {
      color: #aaa;
      font-size: 1rem;
    }

    /* ===== Movie Cards ===== */
    .movies-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 30px;
    }
    .movie-card {
      background: #202020;
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.25s, box-shadow 0.25s;
      cursor: pointer;
      display: flex;
      flex-direction: column;
      height: 480px;
    }
    .movie-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 10px 28px rgba(0,0,0,0.5);
    }
    .movie-poster {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }
    .movie-info {
      flex: 1;
      padding: 14px;
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .movie-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 4px;
      color: #fff;
    }
    .movie-meta {
      font-size: 0.9rem;
      color: #bbb;
      margin-bottom: 6px;
    }
    .movie-rating {
      font-size: 1rem;
      font-weight: 600;
      color: #00bcd4;
      margin-bottom: 8px;
    }

    /* ===== Show Times ===== */
    .show-times {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      justify-content: center;
      margin: 10px 0;
    }
    .time-btn {
      background: #333;
      color: #fff;
      border: 1px solid #00bcd4;
      border-radius: 4px;
      padding: 6px 12px;
      font-size: 0.8rem;
      text-decoration: none;
      transition: all 0.3s;
    }
    .time-btn:hover {
      background: #00bcd4;
      transform: scale(1.05);
    }

    .book-btn {
      display: inline-block;
      background: #00bcd4;
      color: #fff;
      padding: 9px 14px;
      border-radius: 6px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      transition: background 0.2s, transform 0.2s;
      margin-top: 8px;
    }
    .book-btn:hover {
      background: #0097a7;
      transform: scale(1.05);
    }

    /* ===== Slot Modal (Fancy) ===== */
    .slot-modal {
      position: fixed;
      inset: 0;
      display: none;
      align-items: center;
      justify-content: center;
      background: rgba(0,0,0,0.55);
      backdrop-filter: blur(4px);
      z-index: 1000;
    }
    .slot-modal.open { display: flex; }
    .slot-dialog {
      width: 92%;
      max-width: 520px;
      background: linear-gradient(180deg,#1a1f25 0%, #101418 100%);
      border: 1px solid rgba(0,188,212,0.35);
      border-radius: 14px;
      box-shadow: 0 18px 60px rgba(0,0,0,0.6);
      transform: translateY(12px) scale(0.98);
      opacity: 0;
      animation: slotIn 220ms ease-out forwards;
    }
    @keyframes slotIn {
      to { transform: translateY(0) scale(1); opacity: 1; }
    }
    .slot-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 14px 16px;
      border-bottom: 1px solid rgba(255,255,255,0.06);
    }
    .slot-title { color:#00bcd4; margin:0; font-size:1.05rem; font-weight:600; }
    .slot-close {
      background: #0f1216;
      color: #e3f8fb;
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 8px;
      padding: 6px 10px;
      cursor: pointer;
    }
    .slot-body { padding: 16px; }
    .slot-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 10px;
    }
    .slot-grid .time-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 0;
      border-radius: 10px;
      background: linear-gradient(180deg,#151a1f 0%, #0f1418 100%);
      border: 1px solid rgba(0,188,212,0.35);
      color: #dff9fd;
      font-weight: 600;
      letter-spacing: 0.2px;
      box-shadow: inset 0 0 0 1px rgba(0,0,0,0.35);
      transition: transform .16s ease, box-shadow .2s ease, background .2s ease;
      text-decoration: none;
    }
    .slot-grid .time-btn:hover {
      background: linear-gradient(180deg,#0f171c 0%, #0c1216 100%);
      transform: translateY(-2px);
      box-shadow: 0 8px 18px rgba(0,188,212,0.15);
    }
    .slot-footer { padding: 10px 16px 16px; display:flex; justify-content:flex-end; }
    .slot-cancel {
      background: transparent;
      color: #9fb0b6;
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 10px;
      padding: 8px 14px;
      cursor: pointer;
    }

    /* ===== Responsive ===== */
    @media (max-width: 768px) {
      .carousel-slide { height: 240px; }
      .movie-card { height: auto; }
      .movie-poster { height: 220px; }
      .movies-list {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      }
      .welcome-banner h2 {
        font-size: 1.4rem;
      }
      .navbar-user {
        display: none;
      }
    }
    @media (max-width: 480px) {
      .navbar { padding: 0 15px; }
      .navbar-title { font-size: 1.4rem; }
      .navbar-actions { gap: 10px; }
      .navbar-btn { padding: 6px 12px; font-size: 0.85rem; }
      .show-times {
        flex-direction: column;
        align-items: center;
      }
      .welcome-banner {
        padding: 20px;
      }
      .welcome-banner h2 {
        font-size: 1.2rem;
      }
      .welcome-banner p {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <!-- ===== Navbar ===== -->
  <div class="navbar">
    <div class="navbar-title">CINE-BOOK</div>
    <div class="navbar-actions">
      <% if (user) { %>
        <div class="navbar-user">
          <div class="navbar-user-icon"><%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %></div>
          <span><%= user.name || user.email %></span>
        </div>
        <a href="/my-bookings" class="navbar-btn">My Bookings</a>
        <a href="/logout" class="navbar-btn">Logout</a>
      <% } else { %>
        <a href="/login" class="navbar-btn">Login</a>
        <a href="/auth/register" class="navbar-btn">Sign Up</a>
      <% } %>
    </div>
  </div>

  <!-- ===== Main Content ===== -->
  <div class="main-content">
    <!-- Welcome Banner -->
    <% if (user) { %>
      <div class="welcome-banner">
        <h2>Welcome back, <%= user.name || user.email %>! üé¨</h2>
        <p>Ready to book your next movie experience?</p>
      </div>
    <% } %>

    <!-- Carousel -->
    <div class="carousel-container">
      <button class="carousel-nav left" onclick="moveCarousel(-1)">&#10094;</button>
      <div class="carousel" id="carousel">
        <div class="carousel-slide"><img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1695288416714_dreamgirl2sep-980x300.jpg" alt="Banner"></div>
        <div class="carousel-slide"><img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1695290739632_navratri_raas_dandiya_nights_ft_harshita_tiwari_2023_980x300.jpg" alt="Banner"></div>
        <div class="carousel-slide"><img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1695288416714_dreamgirl2sep-980x300.jpg" alt="Banner"></div>
      </div>
      <button class="carousel-nav right" onclick="moveCarousel(1)">&#10095;</button>
    </div>

    <!-- Section -->
    <div class="dashboard-header">
      <h1>Recommended Movies</h1>
      <p>Browse and book your favorite movies</p>
    </div>

    <!-- Movies List -->
    <div class="movies-list">
      <% movies.forEach(function(movie) { %>
        <div class="movie-card">
          <img src="<%= movie.posterUrl || movie.poster %>" alt="<%= movie.title %>" class="movie-poster" onerror="this.src='https://via.placeholder.com/300x400/333/fff?text=No+Image'">
          <div class="movie-info">
            <div>
              <div class="movie-title"><%= movie.title %></div>
              <div class="movie-meta"><%= movie.genre %> | <%= movie.duration %></div>
              <div class="movie-rating">‚≠ê <%= movie.rating %>/10</div>
              
              <!-- Show Times (from DB) -->
              <div class="show-times">
                <% 
                  const movieShows = (showsByMovie && showsByMovie[String(movie._id)]) || [];
                  const defaultSlots = ['10:00 AM','12:00 PM','02:00 PM','03:00 PM','06:00 PM','09:00 PM'];
                  const slotsToRender = movieShows.length > 0 ? movieShows.map(s => s.timing || s.showTime) : defaultSlots;
                %>
                <% slotsToRender.forEach(function(label){ %>
                  <% if (user) { %>
                    <% if (movieShows.length > 0) { %>
                      <% const show = movieShows.find(s => (s.timing || s.showTime) === label); %>
                      <% if (show) { %>
                        <a href="/seatSelection/<%= movie._id %>?showTime=<%= encodeURIComponent(label) %>" class="time-btn" title="Book <%= label %>"><%= label %></a>
                      <% } %>
                    <% } else { %>
                      <a href="/seatSelection/<%= movie._id %>?showTime=<%= encodeURIComponent(label) %>" class="time-btn" title="Book <%= label %>"><%= label %></a>
                    <% } %>
                  <% } else { %>
                    <% if (movieShows.length > 0) { %>
                      <% const show = movieShows.find(s => (s.timing || s.showTime) === label); %>
                      <% if (show) { %>
                        <% const redirectUrl = encodeURIComponent('/seatSelection/' + String(movie._id) + '?showTime=' + label); %>
                        <a href="/login?redirect=<%= redirectUrl %>" class="time-btn" title="Login to book <%= label %>"><%= label %></a>
                      <% } %>
                    <% } else { %>
                      <% const redirectUrl = encodeURIComponent('/seatSelection/' + String(movie._id) + '?showTime=' + label); %>
                      <a href="/login?redirect=<%= redirectUrl %>" class="time-btn" title="Login to book <%= label %>"><%= label %></a>
                    <% } %>
                  <% } %>
                <% }) %>
              </div>
            </div>
            
            <!-- View All Shows: take to first available show or login -->
            <% if (user) { %>
              <button class="book-btn open-slot-modal" 
                      data-movie-id="<%= movie._id %>"
                      data-movie-title="<%= movie.title %>"
                      data-shows='<%- JSON.stringify((showsByMovie && showsByMovie[String(movie._id)]) || []) %>'>
                Book Now
              </button>
            <% } else { %>
              <a href="/login?redirect=/movies" class="book-btn">Login to Book</a>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- ===== Time Slot Modal ===== -->
  <div id="slotModal" class="slot-modal">
    <div class="slot-dialog" role="dialog" aria-modal="true" aria-labelledby="slotModalTitle">
      <div class="slot-header">
        <h3 id="slotModalTitle" class="slot-title">Select Show Time</h3>
        <button id="slotModalClose" class="slot-close">Close</button>
      </div>
      <div class="slot-body">
        <div id="slotButtons" class="slot-grid"><!-- injected --></div>
      </div>
      <div class="slot-footer">
        <button id="slotModalCancel" class="slot-cancel">Cancel</button>
      </div>
    </div>
  </div>

  <!-- ===== Carousel Script ===== -->
  <script>
    let currentSlide = 0;
    const carousel = document.getElementById('carousel');
    const slides = document.querySelectorAll('.carousel-slide');

    function showSlide(index) {
      currentSlide = (index + slides.length) % slides.length;
      carousel.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
    function moveCarousel(dir) {
      showSlide(currentSlide + dir);
    }
    setInterval(() => moveCarousel(1), 5000);
    showSlide(0);

    // Slot selection modal for Book Now
    const slotModal = document.getElementById('slotModal');
    const slotButtons = document.getElementById('slotButtons');
    const slotModalTitle = document.getElementById('slotModalTitle');
    const slotModalClose = document.getElementById('slotModalClose');
    const slotModalCancel = document.getElementById('slotModalCancel');

    function openSlotPicker(movieId, movieTitle, shows) {
      const preset = ['10:00 AM','12:00 PM','02:00 PM','03:00 PM','06:00 PM','09:00 PM'];
      const existing = (shows || []).map(s => s.timing || s.showTime).filter(Boolean);
      const uniqueSlots = Array.from(new Set(existing.length ? existing : preset));

      slotModalTitle.textContent = `Select time ‚Äî ${movieTitle}`;
      slotButtons.innerHTML = '';

      uniqueSlots.forEach((slot) => {
        const a = document.createElement('a');
        a.textContent = slot;
        a.href = `/seatSelection/${movieId}?showTime=${encodeURIComponent(slot)}`;
        a.className = 'time-btn';
        slotButtons.appendChild(a);
      });

      slotModal.classList.add('open');
    }

    function closeSlotModal() { slotModal.classList.remove('open'); }
    slotModalClose.addEventListener('click', closeSlotModal);
    slotModalCancel.addEventListener('click', closeSlotModal);
    slotModal.addEventListener('click', (e) => {
      if (e.target === slotModal) closeSlotModal();
    });

    document.querySelectorAll('.open-slot-modal').forEach(btn => {
      btn.addEventListener('click', () => {
        const movieId = btn.getAttribute('data-movie-id');
        const movieTitle = btn.getAttribute('data-movie-title');
        let shows = [];
        try { shows = JSON.parse(btn.getAttribute('data-shows') || '[]'); } catch(_) {}
        openSlotPicker(movieId, movieTitle, shows);
      });
    });
  </script>
</body>
</html>