<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CINE-BOOK | Book Movie Tickets Online</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: #0a0a0a;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      color: #e5e5e5;
      line-height: 1.6;
    }

    /* ===== Navbar ===== */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: rgba(10, 10, 10, 0.95);
      backdrop-filter: blur(20px);
      padding: 0 40px;
      z-index: 100;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 72px;
    }
    
    .navbar-left {
      display: flex;
      align-items: center;
      gap: 48px;
    }
    
    .navbar-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }
    
    .logo-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-weight: 800;
      font-size: 18px;
      letter-spacing: -1px;
    }
    
    .navbar-title {
      font-size: 1.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #fff 0%, #e5e5e5 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.5px;
    }
    
    .navbar-search {
      display: flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 10px 16px;
      width: 400px;
      transition: all 0.3s;
    }
    
    .navbar-search:focus-within {
      background: rgba(255, 255, 255, 0.08);
      border-color: #e50914;
      box-shadow: 0 0 0 3px rgba(229, 9, 20, 0.15);
    }
    
    .navbar-search input {
      border: none;
      background: transparent;
      outline: none;
      width: 100%;
      font-size: 0.95rem;
      color: #e5e5e5;
      font-weight: 400;
    }
    
    .navbar-search input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }
    
    .search-icon {
      margin-right: 12px;
      color: rgba(255, 255, 255, 0.5);
      font-size: 18px;
    }
    
    .navbar-actions {
      display: flex;
      align-items: center;
      gap: 16px;
    }
    
    .navbar-user {
      display: flex;
      align-items: center;
      gap: 12px;
      color: #e5e5e5;
      font-size: 0.9rem;
      font-weight: 500;
    }
    
    .navbar-user-icon {
      width: 36px;
      height: 36px;
      background: linear-gradient(135deg, #e50914, #b20710);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      font-weight: 700;
      color: #fff;
    }
    
    .navbar-btn {
      background: #e50914;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 10px 24px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
      font-family: 'Inter', sans-serif;
    }
    
    .navbar-btn:hover {
      background: #f40612;
      box-shadow: 0 4px 12px rgba(229, 9, 20, 0.4);
    }
    
    .navbar-btn.secondary {
      background: transparent;
      color: #e5e5e5;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .navbar-btn.secondary:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.3);
    }

    /* ===== Main Content ===== */
    .main-content {
      max-width: 1400px;
      margin: 92px auto 40px auto;
      padding: 0 20px;
    }

    /* ===== Carousel ===== */
    .carousel-container {
      width: 100%;
      margin-bottom: 48px;
      position: relative;
      overflow: hidden;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
    }
    
    .carousel {
      display: flex;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      width: 100%;
    }
    
    .carousel-slide {
      min-width: 100%;
      height: 400px;
      position: relative;
    }
    
    .carousel-slide img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .carousel-nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: #fff;
      font-size: 1.5rem;
      border-radius: 50%;
      width: 48px;
      height: 48px;
      cursor: pointer;
      z-index: 10;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
      font-weight: 300;
    }
    
    .carousel-nav:hover {
      background: rgba(229, 9, 20, 0.9);
      border-color: #e50914;
      transform: translateY(-50%) scale(1.1);
    }
    
    .carousel-nav.left { left: 24px; }
    .carousel-nav.right { right: 24px; }
    
    .carousel-indicators {
      position: absolute;
      bottom: 24px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 10px;
    }
    
    .indicator {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.4);
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .indicator.active {
      background: #e50914;
      width: 32px;
      border-radius: 4px;
    }

    /* ===== Section Header ===== */
    .section-header {
      margin: 48px 0 32px 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .section-header h2 {
      font-size: 2rem;
      font-weight: 700;
      color: #fff;
      letter-spacing: -0.5px;
    }
    
    .section-subtitle {
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.95rem;
      margin-top: 6px;
      font-weight: 400;
    }
    
    .filter-group {
      display: flex;
      gap: 12px;
      align-items: center;
    }
    
    .filter-btn {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 24px;
      padding: 10px 20px;
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.7);
      cursor: pointer;
      transition: all 0.3s;
      font-weight: 500;
    }
    
    .filter-btn:hover {
      border-color: #e50914;
      color: #e50914;
      background: rgba(229, 9, 20, 0.1);
    }
    
    .filter-btn.active {
      background: #e50914;
      color: #fff;
      border-color: #e50914;
    }

    /* ===== Movie Cards ===== */
    .movies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 28px;
      margin-bottom: 48px;
    }
    
    .movie-card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      display: flex;
      flex-direction: column;
    }
    
    .movie-card:hover {
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.8);
      border-color: rgba(229, 9, 20, 0.5);
    }
    
    .movie-poster-wrapper {
      position: relative;
      width: 100%;
      height: 340px;
      overflow: hidden;
      background: #1a1a1a;
    }
    
    .movie-poster {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s;
    }
    
    .movie-card:hover .movie-poster {
      transform: scale(1.08);
    }
    
    .movie-rating-badge {
      position: absolute;
      bottom: 12px;
      left: 12px;
      background: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(10px);
      color: #fff;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 4px;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .star-icon {
      color: #fbbf24;
      font-size: 14px;
    }
    
    .movie-info {
      padding: 18px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .movie-title {
      font-size: 1.1rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 10px;
      line-height: 1.3;
    }
    
    .movie-genre {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      margin-bottom: 12px;
    }
    
    .genre-tag {
      background: rgba(229, 9, 20, 0.15);
      color: #e50914;
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
      border: 1px solid rgba(229, 9, 20, 0.3);
    }
    
    .movie-meta {
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.85rem;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .meta-divider {
      width: 4px;
      height: 4px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
    }

    /* ===== Show Times ===== */
    .show-times-section {
      margin-top: auto;
      padding-top: 16px;
      border-top: 1px solid rgba(255, 255, 255, 0.08);
    }
    
    .show-times-label {
      font-size: 0.75rem;
      color: rgba(255, 255, 255, 0.5);
      font-weight: 600;
      margin-bottom: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .show-times {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
      margin-bottom: 12px;
    }
    
    .time-btn {
      background: rgba(34, 197, 94, 0.1);
      color: #22c55e;
      border: 1px solid rgba(34, 197, 94, 0.3);
      border-radius: 6px;
      padding: 8px 4px;
      font-size: 0.75rem;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.2s;
      text-align: center;
      display: block;
    }
    
    .time-btn:hover {
      background: rgba(34, 197, 94, 0.2);
      border-color: #22c55e;
    }
    
    .book-now-btn {
      width: 100%;
      background: linear-gradient(135deg, #e50914 0%, #b20710 100%);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 12px;
      font-size: 0.9rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .book-now-btn:hover {
      box-shadow: 0 8px 24px rgba(229, 9, 20, 0.4);
    }

    /* ===== Modal ===== */
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(8px);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      animation: fadeIn 0.2s ease-out;
    }
    
    .modal-overlay.open { display: flex; }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    .modal-content {
      background: #1a1a1a;
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      width: 90%;
      max-width: 700px;
      max-height: 85vh;
      overflow: hidden;
      box-shadow: 0 24px 80px rgba(0, 0, 0, 0.9);
      animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .modal-header {
      padding: 24px 28px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .modal-title {
      font-size: 1.35rem;
      font-weight: 700;
      color: #fff;
    }
    
    .modal-close {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      font-size: 1.5rem;
      color: rgba(255, 255, 255, 0.7);
      cursor: pointer;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      transition: all 0.2s;
      font-weight: 300;
    }
    
    .modal-close:hover {
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }
    
    .modal-body {
      padding: 28px;
      max-height: calc(85vh - 140px);
      overflow-y: auto;
    }
    
    .time-slots-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }
    
    .time-slot-btn {
      background: rgba(255, 255, 255, 0.03);
      border: 2px solid rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      padding: 18px 12px;
      cursor: pointer;
      transition: all 0.3s;
      text-align: center;
      text-decoration: none;
      display: block;
    }
    
    .time-slot-btn:hover {
      border-color: #e50914;
      background: rgba(229, 9, 20, 0.1);
    }
    
    .time-slot-time {
      font-size: 1.05rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 6px;
    }
    
    .time-slot-label {
      font-size: 0.75rem;
      color: #22c55e;
      font-weight: 600;
    }

    /* ===== No Results ===== */
    .no-results {
      text-align: center;
      padding: 80px 20px;
      color: rgba(255, 255, 255, 0.5);
    }
    
    .no-results-icon {
      font-size: 4rem;
      margin-bottom: 16px;
      opacity: 0.3;
    }
    
    .no-results h3 {
      font-size: 1.5rem;
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 8px;
    }

    /* ===== Footer ===== */
    .footer {
      background: rgba(255, 255, 255, 0.02);
      border-top: 1px solid rgba(255, 255, 255, 0.08);
      padding: 40px 40px;
      margin-top: 80px;
    }
    
    .footer-content {
      max-width: 1400px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 40px;
    }
    
    .footer-section h3 {
      font-size: 1rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 20px;
    }
    
    .footer-links {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
    
    .footer-links a {
      color: rgba(255, 255, 255, 0.5);
      text-decoration: none;
      font-size: 0.9rem;
      transition: color 0.2s;
    }
    
    .footer-links a:hover {
      color: #e50914;
    }

    /* ===== Responsive ===== */
    @media (max-width: 1024px) {
      .navbar-search {
        width: 300px;
      }
      .movies-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      }
    }
    
    @media (max-width: 768px) {
      .navbar {
        padding: 0 20px;
      }
      .navbar-left {
        gap: 24px;
      }
      .navbar-search {
        display: none;
      }
      .carousel-slide {
        height: 240px;
      }
      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
      }
      .movies-grid {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 20px;
      }
      .movie-poster-wrapper {
        height: 260px;
      }
      .time-slots-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    
    @media (max-width: 480px) {
      .navbar {
        height: 64px;
        padding: 0 16px;
      }
      .navbar-title {
        font-size: 1.25rem;
      }
      .logo-icon {
        width: 36px;
        height: 36px;
        font-size: 16px;
      }
      .navbar-user span {
        display: none;
      }
      .carousel-slide {
        height: 180px;
      }
      .section-header h2 {
        font-size: 1.5rem;
      }
      .movies-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      .time-slots-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>
</head>
<body>
  <!-- ===== Navbar ===== -->
  <nav class="navbar">
    <div class="navbar-left">
      <a href="/" class="navbar-logo">
        <div class="logo-icon">CB</div>
        <div class="navbar-title">CINE-BOOK</div>
      </a>
      <div class="navbar-search">
        <span class="search-icon">⌕</span>
        <input type="text" id="searchInput" placeholder="Search for movies...">
      </div>
    </div>
    <div class="navbar-actions">
      <% if (user) { %>
        <div class="navbar-user">
          <div class="navbar-user-icon"><%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %></div>
          <span><%= user.name || user.email %></span>
        </div>
        <a href="/my-bookings" class="navbar-btn secondary">My Bookings</a>
        <form action="/logout" method="POST" style="display: inline;">
          <button type="submit" class="navbar-btn">Sign Out</button>
        </form>
      <% } else { %>
        <a href="/login" class="navbar-btn secondary">Sign In</a>
        <a href="/auth/register" class="navbar-btn">Register</a>
      <% } %>
    </div>
  </nav>

  <!-- ===== Main Content ===== -->
  <main class="main-content">
    <!-- Carousel -->
    <div class="carousel-container">
      <button class="carousel-nav left" onclick="moveCarousel(-1)" aria-label="Previous slide">‹</button>
      <div class="carousel" id="carousel">
        <div class="carousel-slide">
          <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1695288416714_dreamgirl2sep-980x300.jpg" alt="Featured Banner">
        </div>
        <div class="carousel-slide">
          <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1695290739632_navratri_raas_dandiya_nights_ft_harshita_tiwari_2023_980x300.jpg" alt="Event Banner">
        </div>
        <div class="carousel-slide">
          <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1695288416714_dreamgirl2sep-980x300.jpg" alt="Movie Banner">
        </div>
      </div>
      <button class="carousel-nav right" onclick="moveCarousel(1)" aria-label="Next slide">›</button>
      <div class="carousel-indicators">
        <div class="indicator active" onclick="showSlide(0)"></div>
        <div class="indicator" onclick="showSlide(1)"></div>
        <div class="indicator" onclick="showSlide(2)"></div>
      </div>
    </div>

    <!-- Section Header -->
    <div class="section-header">
      <div>
        <h2>Now Showing</h2>
        <p class="section-subtitle">Book tickets for the latest movies</p>
      </div>
      <div class="filter-group">
        <button class="filter-btn active" data-filter="all">All</button>
        <button class="filter-btn" data-filter="action">Action</button>
        <button class="filter-btn" data-filter="drama">Drama</button>
        <button class="filter-btn" data-filter="comedy">Comedy</button>
        <button class="filter-btn" data-filter="thriller">Thriller</button>
      </div>
    </div>

    <!-- Movies Grid -->
    <div class="movies-grid" id="moviesGrid">
      <% movies.forEach(function(movie) { %>
        <div class="movie-card" 
             data-title="<%= movie.title.toLowerCase() %>"
             data-genres="<%= (movie.genre || '').toLowerCase() %>">
          <div class="movie-poster-wrapper">
            <img src="<%= movie.posterUrl || movie.poster %>" 
                 alt="<%= movie.title %>" 
                 class="movie-poster" 
                 onerror="this.src='https://via.placeholder.com/300x450/1a1a1a/e50914?text=No+Poster'">
            <div class="movie-rating-badge">
              <span class="star-icon">★</span>
              <span><%= movie.rating %>/10</span>
            </div>
          </div>
          
          <div class="movie-info">
            <div class="movie-title"><%= movie.title %></div>
            
            <div class="movie-genre">
              <% 
                const genres = movie.genre ? movie.genre.split(',').map(g => g.trim()).slice(0, 2) : ['General'];
                genres.forEach(function(g) { 
              %>
                <span class="genre-tag"><%= g %></span>
              <% }); %>
            </div>
            
            <div class="movie-meta">
              <span><%= movie.duration || '2h 30m' %></span>
            </div>

            <div class="show-times-section">
              <div class="show-times-label">Quick Book</div>
              <div class="show-times">
                <% 
                  const movieShows = (showsByMovie && showsByMovie[String(movie._id)]) || [];
                  const defaultSlots = ['10:00 AM','02:00 PM','06:00 PM'];
                  const quickSlots = movieShows.length > 0 
                    ? movieShows.map(s => s.timing || s.showTime).slice(0, 3)
                    : defaultSlots;
                  
                  quickSlots.forEach(function(slot) {
                %>
                  <% if (user) { %>
                    <a href="/seatSelection/<%= movie._id %>?showTime=<%= encodeURIComponent(slot) %>" 
                       class="time-btn"><%= slot %></a>
                  <% } else { %>
                    <% const redirectUrl = encodeURIComponent('/seatSelection/' + String(movie._id) + '?showTime=' + slot); %>
                    <a href="/login?redirect=<%= redirectUrl %>" 
                       class="time-btn"><%= slot %></a>
                  <% } %>
                <% }); %>
              </div>
              
